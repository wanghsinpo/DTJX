#!/usr/bin/ksh
trap "" 23

ECHO=print
BINDIR=/bin
USRBIN=/usr/bin
FADEST=/opt/SPECS_FA

if [[ `id -un` != "root" ]]; then
    $ECHO "ERROR: You must log in as root."
    exit
fi

cd $FADEST/dmh/bin
if [[ -f datahub84 ]]; then
    $USRBIN/rm -f datahub
    $BINDIR/ln -s datahub84 datahub
fi
if [[ -f dmh84_inspect ]]; then
    $USRBIN/rm -f dmh_inspect
    $BINDIR/ln -s dmh84_inspect dmh_inspect
fi
if [[ -f dmh84 ]]; then
    $USRBIN/rm -f dmh_wish
    $BINDIR/ln -s dmh84 dmh_wish
fi
if [[ -f hub84client ]]; then
    $USRBIN/rm -f hubclient
    $BINDIR/ln -s hub84client hubclient
fi

cd $FADEST/contrib/equip_sim/bin
if [[ -f ../../../dmh/vgem/bin/libtbcload1.4.so ]]; then
    $USRBIN/rm -f libtbcload1.4.so
    $BINDIR/ln -s ../../../dmh/vgem/bin/libtbcload1.4.so libtbcload1.4.so
fi

cd $FADEST/contrib/tools/bin
if [[ -f ../../../dmh/vgem/bin/libtbcload1.4.so ]]; then
    $USRBIN/rm -f libtbcload1.4.so
    $BINDIR/ln -s ../../../dmh/vgem/bin/libtbcload1.4.so libtbcload1.4.so
fi
